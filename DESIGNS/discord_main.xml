<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#363940"
    tools:context=".MainActivity"
    tools:ignore="MissingDefaultResource">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/header_blue"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="#0B2B92"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.cardview.widget.CardView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:backgroundTint="#1d2860"
            app:cardCornerRadius="20dp"
            app:layout_constraintTop_toTopOf="@id/header_blue"
            app:layout_constraintEnd_toEndOf="@id/header_blue"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_gravity="center"
                android:src="@drawable/discord_dots_top"/>

        </androidx.cardview.widget.CardView>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="#18191d"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/header_blue" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/circle_big_profile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="64dp"
            android:backgroundTint="#0B2B92"
            app:cardCornerRadius="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeColor="#18191d"
            app:strokeWidth="2dp">

            <ImageView
                android:id="@+id/big_pic"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_gravity="center"
                android:src="@drawable/discord_big_pic" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/materialCardView"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignEnd="@id/circle_big_profile"
            android:layout_alignBottom="@id/circle_big_profile"
            android:layout_marginTop="30dp"
            android:backgroundTint="#41af5e"
            app:cardCornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/circle_big_profile"
            app:layout_constraintEnd_toEndOf="@+id/circle_big_profile"
            app:layout_constraintTop_toTopOf="@+id/circle_big_profile"
            app:strokeColor="#18191d"
            app:strokeWidth="2dp">

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="AliJon_ShirChoi777"
            android:textColor="#FFFFFF"
            android:textSize="14dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/view"
            app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintTop_toTopOf="@+id/header_blue"
            app:layout_constraintVertical_bias="0.835" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="62dp"
            android:textColor="#FFFFFF"
            android:text="     Set Status"
            android:drawableStart="@drawable/discord_status"
            android:layout_marginStart="10dp"
            android:textSize="12dp"
            android:gravity="center_vertical"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:gravity="center|end"
            android:layout_marginStart="200dp"
            android:textSize="12dp"
            android:drawableStart="@drawable/discord_green_circle"
            android:text="Online    "
            android:drawableEnd="@drawable/discord_arrow_right"/>
        
        
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:textColor="#FFFFFF"
        android:text="     Account"
        android:drawableStart="@drawable/discord_account"
        android:layout_marginStart="10dp"
        android:textSize="12dp"
        android:gravity="center_vertical"
        android:drawableEnd="@drawable/discord_arrow_right"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:textColor="#FFFFFF"
        android:text="     User Profile"
        android:drawableStart="@drawable/discord_user_profile"
        android:layout_marginStart="10dp"
        android:textSize="12dp"
        android:gravity="center_vertical"
        android:drawableEnd="@drawable/discord_arrow_right"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:textColor="#FFFFFF"
        android:text="     Privacy & Safety"
        android:drawableStart="@drawable/discord_privacy"
        android:layout_marginStart="10dp"
        android:textSize="12dp"
        android:gravity="center_vertical"
        android:drawableEnd="@drawable/discord_arrow_right"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:textColor="#FFFFFF"
        android:text="     Authorized Apps"
        android:drawableStart="@drawable/discord_authorized"
        android:layout_marginStart="10dp"
        android:textSize="12dp"
        android:gravity="center_vertical"
        android:drawableEnd="@drawable/discord_arrow_right"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="62dp"
            android:textColor="#FFFFFF"
            android:text="     Devices"
            android:drawableStart="@drawable/discord_devices"
            android:layout_marginStart="10dp"
            android:textSize="12dp"
            android:gravity="center_vertical"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:drawableStart="@drawable/discord_beta"
            android:layout_gravity="left"
            android:layout_marginStart="10dp"
            android:drawableEnd="@drawable/discord_arrow_right"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:textColor="#FFFFFF"
        android:text="     Connections"
        android:drawableStart="@drawable/discord_connections"
        android:layout_marginStart="10dp"
        android:textSize="12dp"
        android:gravity="center_vertical"
        android:drawableEnd="@drawable/discord_arrow_right"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:textColor="#FFFFFF"
        android:text="     Friend requests"
        android:drawableStart="@drawable/discord_friend"
        android:layout_marginStart="10dp"
        android:textSize="12dp"
        android:gravity="center_vertical"
        android:drawableEnd="@drawable/discord_arrow_right"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:textColor="#FFFFFF"
        android:text="     Scan QR Code"
        android:drawableStart="@drawable/discord_qrcode"
        android:layout_marginStart="10dp"
        android:textSize="12dp"
        android:gravity="center_vertical"
        android:drawableEnd="@drawable/discord_arrow_right"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="#18191d">

        <ImageView
            android:id="@+id/bottom_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="39dp"
            android:src="@drawable/discord_bottom_icon" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/bottom_icon"
            android:layout_marginStart="-12dp"
            android:layout_marginTop="19dp"
            android:layout_toEndOf="@+id/bottom_icon"
            android:src="@drawable/discord_bottom_smallcircle" />

        <ImageView
            android:id="@+id/bottom_hand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="39dp"
            android:layout_toEndOf="@id/bottom_icon"
            android:src="@drawable/discord_bottom_raisedhand" />

        <ImageView
            android:id="@+id/bottom_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="39dp"
            android:layout_toEndOf="@id/bottom_hand"
            android:src="@drawable/discord_bottom_search" />

        <ImageView
            android:id="@+id/bottom_alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="39dp"
            android:layout_toEndOf="@id/bottom_search"
            android:src="@drawable/discord_bottom_alarm" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/bottom_alarm"
            android:layout_marginStart="-12dp"
            android:layout_marginTop="19dp"
            android:layout_toEndOf="@+id/bottom_alarm"
            android:src="@drawable/discord_bottom_smallcircle" />

        <ImageView
            android:id="@+id/bottom_choi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="39dp"
            android:layout_toEndOf="@id/bottom_alarm"
            android:src="@drawable/discord_bottom_tea" />


    </RelativeLayout>


</LinearLayout>
